@charset "utf-8";
/*btnWrap*/
.btnWrap{position:relative; float:left; width:100%; height:150px;line-height:150px; background-color:#FFF; border-bottom:1px solid black; font-size:50px;font-family: NotoSansCJKkr-Medium;}
.columnBtn{float:left; width:49.9%; text-align:center;}
.columnText{display:inline-block;}

.borderBar{float:left; width:1px; height:55px; background-color:black; margin: 48px 0 0 0;}

.reviewBtn{float:left; width:49.9%; text-align:center;}
.reviewText{display:inline-block;}

/*infoWrap*/
.infoWrap{float:left; width:100%; padding:45px 0 45px 0; border-bottom:1px solid black; background-color:#231F20; color:white;}
.iconUser{display:inline-block; width:280px; height:280px; margin:35px 0 35px 0;}
.iconSet{position:absolute; right:45px; width:80px;}
.petName{font-size:50px;}
.infoEtc{font-family: NotoSansCJKkr-DemiLight;}
.userFavorite{}
.userCnt{color:#5184FF;}

.gap{float:left; width:100%; height:35px; background-color:#F1F2F2; border-bottom:1px solid black;}

/*btnWrap2*/
.btnWrap2{float:left; width:100%;}
.btnValue{float:left; width:49.8%; height:250px; border:1px solid black; background-color:#fff; }
.favoriteCnt{font-size:45px;color:#5184FF;}
.favoriteText{font-size:45px;}

/*noticeBox*/
.noticeBox{float:left; width:100%; margin: 0 0 20px 0;}
.noticeBoxArea{display:inline-block; width:84%; padding:45px 0 40px 0; border-bottom:1px solid black; font-family: NotoSansCJKkr-Medium;}
.noticeBoxImg{float:left; width:70px;}
.noticeBoxText{display:inline-block; float:left; margin:0 0 0 45px; color:#5184FF;}

/*noticeBox*/
.noticeWrap{float:left; width:100%;}
.noticeTextWrap{display:inline-block; width:84%; padding:5px 0 0 0;}
