@charset "utf-8";
/*btnWrap*/
.idTextWrap{float:left; width:100%; height:100px; line-height:100px; background-color:#F1F2F2; border-bottom:1px solid black; }
.idTextArea{display:inline-block; width: 80%;}
.idText{display:inline-block; float:left; font-size:40px;}

.textColor{color:#5184FF;}

/*analysisInfo*/
.analysisInfo{float:left; width:100%; text-align:center; padding:20px 0 20px 0;border-bottom:1px solid black; background-color:#fff; cursor:pointer;}
.analysisArea{display:inline-block; width:84%;}
.iconAnalysis{float:left; width:180px; margin:0 50px 0 0;}
.infoText{float:left; text-align:left; }
.brandName{font-size:40px; color:#939598; margin:10px 0 -10px 0;}
.productName{font-size:45px; margin:0 0 -10px 0;}
.categoryName{font-size:40px; margin:0 0 -10px 0;}


/*ingredientInfo*/
.ingredientInfo{float:left; width:100%; text-align:center; background-color:#fff; cursor:pointer;}
.ingredientArea{display:inline-block; width:84%;padding: 45px 0 45px 0; border-bottom:1px solid black; }
.ingredientName{display:inline-block; float:left;color:#5184FF; text-align:left; margin:0 20px 20px 0; }
.infoArea{display:inline-block; line-height:50px; width:100%; margin:20px 0 0 20px;}
.iconCare{float:left; margin:0 65px 0 0;}
.careName{display:inline-block; float:left;}
.careCnt{color:red; margin:0 0 0 25px;}
.iconAllergy{float:left; margin:0 65px 0 0;}
.allergyName{display:inline-block; float:left;}

.ingredientAllName{color:#5184FF; text-align:left; margin:0 50px 20px 0; }
.ingredientAllText{display:inline-block; float:left;}

/*bar*/
.barWrap{float:left;width:85%;height:50px;overflow:hidden;border-radius:15px;}
.barOne{float:left;width:60%;height:49px; background-color:#5184FF;}
.barTwo{float:left;width:20%;height:49px; background-color:#FDBE23;}
.barThree{float:left;width:10%;height:49px; background-color:#BE1E2D;}
.barFour{float:left;width:10%;height:49px; background-color:#808285;}


/*modifyBtn*/
.modifyBtn{display:inline-block; width:84%; height:150px; background-color:#5184FF; margin:100px 0 0 0; line-height:150px;}
.modifyText{display:inline-block;color:#fff; }